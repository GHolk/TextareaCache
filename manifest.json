{
  "applications": {
    "gecko": {
      "id": "textarea-cache-lite@wildsky.cc",
      "strict_min_version": "51.0"
    }
  },

  "manifest_version": 2,
  "name": "Textarea Cache Lite",
  "version": "2.2.5",

  "default_locale": "en",
  "description": "Allows to save automatically the content in a text input field.",
  "homepage_url": "https://addons.mozilla.org/en-US/firefox/addon/textarea-cache-lite/",

  "icons": {
    "48": "icons/icon.png"
  },

  "permissions": ["<all_urls>", "storage", "tabs", "clipboardWrite"],

  "browser_action": {
    "browser_style": true,
    "default_title": "Save your data",
    "default_popup": "panel.html",
    "default_icon": "icons/tacache-32.png"
  },

  "content_scripts": [
    {
      "match_about_blank": true,
      "all_frames": true,
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content-script.js"]
    }
  ],

  "background": {
    "scripts": ["index.js"]
  }
}
